//It is said to be one of the most important chapters.
//Week2 is all about Array and I will spend time on learning different arrays
//Reset keyword is very important in Arrays.
//int[] arr=new int[10]. You made an Array and at the same time resetted so that there will be no issue when printing them.
//Array starts with 0. If there is Array of [10], then it is not 1~10 but rather 0~9. 
//therefor, when I used it with for loop, the variable must start with 0 not 1. (unless you want it to start with 1).
package Week2;

import java.util.Scanner;

public class Arr2 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int i, max;
		int[] arr=new int[10];
		System.out.println("Type 10 numbers");
		for (i=0;i<arr.length;i++) {
			arr[i]=sc.nextInt();
			
			max=arr[0];
			for (i=0;i<arr.length;i++) {
				if(max<arr[i]) {
					max=arr[i];
				}
			}
		System.out.println("max= "+max);
		}

	}

}
import java.util.Scanner;

public class Arr3 {

	public static void main(String[] args) {
		int i, sum=0;
		float avg;
		int[] score=new int[5];
		Scanner sc=new Scanner(System.in);
		
		System.out.println("Type 5 scores");
		for (i=0;i<score.length;i++) {
			score[i]=sc.nextInt();
		}
		for(i=0;i<score.length;i++) {
			sum+=score[i];
			
			avg= (float) sum/5;
			System.out.println("total=" +sum+",average"+avg);
		}

	}

}
public class Arr4 {
	public static void main(String[] args) {
	int[][] arr= {{1,2,3},{4,5,6}};
	int i, j;
	for (i=0;i<arr.length;i++){
		for (j=0;j<arr[i].length;j++){
			System.out.print(arr[i][j]+"\t");
		}
	System.out.println();
	
	}}}
  import java.util.Scanner;

public class Array5 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int[] intArr=new int[] {1,2,3,4,5};
		int i;
		System.out.println("print out reset outcome");
		for (i=0;i<intArr.length;i++) {
			System.out.print(intArr[i]+"\t");
		}
		System.out.println();
		
		System.out.println("Type 5 random numbers");
		for (i=0;i<intArr.length;i++) {
			intArr[i]=sc.nextInt();
			}
		System.out.println("print out result shown in array");
		for(i=0;i<intArr.length;i++) {
			System.out.print(intArr[i]+"\t");
		}
	}

}
